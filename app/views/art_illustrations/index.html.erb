<h1>Listing Art Illustrations</h1>

<div class="admin_actions_table">
    <h3 class="wm150">
        <%= link_to 'New Art illustration', new_art_illustration_path %>
    </h3>
    <h3 class="wm150">
        <%= link_to 'Add defaults', {controller: 'art_illustrations', action: 'add_defaults'}, data: {confirm: 'Are you sure?'} %>
    </h3>
    <h3 class="wm150">
        <%= link_to 'Clean all', {controller: 'art_illustrations', action: 'clean'}, data: {confirm: 'Are you sure?'} %>
    </h3>

</div>

<table>
    <thead>
    <tr>
        <th class="wm150" style="text-align: center;">Name</th>
        <th class="wm150">Show index</th>
        <th class="wm150">Image</th>
        <th class="wm500" colspan="5"></th>
    </tr>
    </thead>

    <tbody>
    <% @art_illustrations.each do |art_illustration| %>
        <tr>
            <td class="centered_text"><%= art_illustration.name %></td>
            <td class="centered_text"><%= art_illustration.show_index %></td>
            <td class="centered_text"><%= image_tag(art_illustration.image, style: "width: 100px; height: 100px;") %></td>
            <td><%= link_to 'Show', art_illustration %></td>
            <td><%= link_to 'Edit', edit_art_illustration_path(art_illustration) %></td>
            <td ><%= link_to 'Destroy', art_illustration, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <td class=""><%= link_to '  ^^^  ', [:move_up, art_illustration] %></td>
            <td class=""><%= link_to '  \/  ', [:move_down, art_illustration] %></td>
        </tr>
    <% end %>
    </tbody>
</table>