<div class="nested-fields">
    <%= f.inputs do %>
        
        <%= f.input :show_index %>

        <% if f.object.image? %>
            <%= image_tag f.object.image.url, class:"w100 h100" %> <br/>
            Change
        <% end %>
        
        <%= f.input :image %>
        <%= link_to_remove_association "remove inner", f %>
    <% end %>
</div>