<!DOCTYPE html>
<html>
<head>
    <title>Erik Musin</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= favicon_link_tag "favicon.ico" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=450px, initial-scale=0.25">
</head>

<body class="contacts_full_back">

<%= render file: "landing/menu" %>
<div class=" w_full page-wrap">
    <div style="padding-top: 300px;">

        <div class="container_last light_color_font">

            <div class="half_pack over_hidden">
                <%= link_to("mailto:" + CurContacts::CUR_EMAIL, {class: "mail_to_animate land_cont_title_mail erik_link_shadowed", style: ""}) do %>
                    <%= CurContacts::CUR_EMAIL %>
                <% end %>

                <%= link_to("mailto:" + CurContacts::CUR_EMAIL, {class: "h160 jerry_back land_cont_img_mail", style: ""}) do %>
                    <%= image_tag "landing/vector-contacts/mail.svg", {class: "contact_link_image h30 pos_abs half_down land_cont_inner_mail", style: ""} %>
                <% end %>
            </div>

            <div class="half_pack over_hidden">
                <%= link_to(CurContacts::CUR_VK, {class: "vk_to_animate  land_cont_title_vk erik_link_shadowed", style: ""}) do %>
                    <%= CurContacts::CUR_VK %>
                <% end %>
                <%= link_to(CurContacts::CUR_VK, {class: "h160 jerry_back  land_cont_img_vk", style: ""}) do %>
                    <%= image_tag "landing/vector-contacts/vk.svg", {class: "contact_link_image h30  pos_abs half_down land_cont_inner_vk", style: ""} %>
                <% end %>
            </div>
        </div>


        <style>
            .triangle_contacts {
                visibility: visible;
            }
        </style>

    </div>
</div>
<footer>
    <%= image_tag "landing/vector-contacts/Jerry_cut.png", class: "" %>
</footer>
</body>

</html>